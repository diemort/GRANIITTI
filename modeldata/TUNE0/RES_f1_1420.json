// Resonance parameters
//
// mikael.mieskolainen@cern.ch, 2017
{

  "PARAM_RES" : {

    // PDG identifier
    "PDG" : 20333,

    // Mass, width, spin (0,1/2,1,3/2,2...), parity (1,-1)
    "M"  : 1.4264,
    "W"  : 5.49E-2,
    "J"  : 1,
    "P"  : 1,
    
    // "Glueball state" (orthogonal transverse geometry)
    "glue" : false,

    // Breit-Wigner propagator type
    // 1 = fixed width relativistic
    // 2 = running width relativistic
    // 3 = spin barrier relativistic
    "BW" : 2,
    
    // Set 0 for density matrix below, or an integer > 0 for a random sampled
    // Different integers give different matrices.
    "random_rho" : 0,

    // Production coupling constant at amplitude level
    "g_A"   : 1.0,
    "g_phi" : 0.0,

    // Production form factor on
    "g_FF"  : false,

    // Lorentz frame of spin polarization density
    // (SR ~ no rotation, HE ~ helicity, CS ~ Collins-Soper)
    // Any rest frame is technically ok,
    // but some of them may have simpler representations for the rho matrix.
    "FRAME" : "SR",
    
    // Resonance spin-density (von Neumann) matrix (Re and Im parts)
    
    // Spin-1
    // rho_00 = Transverse part, rho_-1-1, rho_11 = longitudinal parts
    "rho_real" : [ [ 0.5, 0,   0] ,
                   [ 0,   0,   0] ,
                   [ 0,   0, 0.5] ],
    "rho_imag" : [ [ 0,  0,  0] ,
                   [ 0,  0,  0] ,
                   [ 0,  0,  0] ],
  }

}
